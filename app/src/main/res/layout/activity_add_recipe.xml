<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FDF6EC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nút Quay lại -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:padding="10dp"
            android:backgroundTint="@color/Nau_sua"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="8dp"/>

        <!-- Tiêu đề công thức -->
        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên công thức"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="8dp"
            android:backgroundTint="@color/Nau_caramel"/>

        <!-- Độ khó và thời gian -->
        <EditText
            android:id="@+id/edtDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Độ khó"
            android:inputType="text"
            android:padding="8dp"
            android:backgroundTint="@color/Nau_caramel"/>

        <EditText
            android:id="@+id/edtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thời gian (phút)"
            android:padding="8dp"
            android:backgroundTint="@color/Nau_caramel"
            android:inputType="number"/>

        <!-- Nguyên liệu -->
        <EditText
            android:id="@+id/edtIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập nguyên liệu, mỗi dòng một nguyên liệu"
            android:minLines="1"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:overScrollMode="always"
            android:imeOptions="actionDone"
            android:padding="8dp"
            android:backgroundTint="@color/Nau_caramel"/>

        <!-- Hướng dẫn -->
        <EditText
            android:id="@+id/edtSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập hướng dẫn từng bước"
            android:minLines="3"
            android:maxLines="7"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:overScrollMode="always"
            android:imeOptions="actionDone"
            android:padding="8dp"
            android:backgroundTint="@color/Nau_caramel"/>

        <EditText
            android:id="@+id/edtImageURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập URL của ảnh"
            android:backgroundTint="@color/Nau_caramel"/>

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Nau_sua"/>

        <!-- Nút đăng bài -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng bài"
            android:padding="12dp"
            android:textSize="18sp"
            android:backgroundTint="@color/Nau_sua"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
