<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f4e4d7"
        android:padding="16dp">

        <!-- Hình ảnh -->
        <ImageView
            android:id="@+id/imageViewCroissant"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/croissant" />

        <!-- Tiêu đề "Chuẩn bị" -->
        <TextView
            android:id="@+id/txtChuanBiCroissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a66a44"
            android:padding="8dp"
            android:text="Chuẩn bị:"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <!-- Độ khó & thời gian -->
        <TextView
            android:id="@+id/txtDoKhoCroissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c79a78"
            android:padding="8dp"
            android:text="Độ khó: Khó   Thời gian: 3h"
            android:textSize="20sp" />

        <!-- Danh sách nguyên liệu -->
        <TextView
            android:id="@+id/txtNguyenLieuCroissant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Bột mì 500 gr\n2. Đường 50 gr\n3. Men nở 10 gr\n4. Sữa tươi 250 ml\n5. Bơ 300 gr\n6. Trứng gà 1 quả\n7. Muối 5 gr"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtBuocCroissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a66a44"
            android:padding="8dp"
            android:text="Bước làm: "
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtB1Croissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 1: Nhào bột"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB1Croissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Trộn bột mì, đường, men nở và muối. Thêm sữa từ từ, nhào bột trong 10 phút rồi ủ 2 tiếng." />

        <TextView
            android:id="@+id/txtB2Croissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 2: Cán bột và gấp lớp"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB2Croissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Cán bột thành hình chữ nhật, đặt bơ vào giữa rồi gấp bột lại. Lặp lại quá trình cán và gấp 3 lần, sau đó ủ bột trong 1 tiếng." />

        <TextView
            android:id="@+id/txtB3Croissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 3: Cắt bột và tạo hình"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB3Croissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Cắt bột thành các tam giác nhỏ, cuộn lại thành hình croissant, sau đó ủ thêm 30 phút." />

        <TextView
            android:id="@+id/txtB4Croissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 4: Nướng bánh"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB4Croissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Quét một lớp trứng lên bánh, nướng ở 200°C trong 20 phút cho đến khi vàng giòn." />

        <Button
            android:id="@+id/btnSaveCroissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a66a44"
            android:text="Lưu"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnBackCroissant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:text="Quay lại"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</ScrollView>
