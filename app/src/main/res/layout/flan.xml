<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f7e6c3"
        android:padding="16dp">

        <!-- Hình ảnh -->
        <ImageView
            android:id="@+id/imageViewFlan"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/flan" />

        <!-- Tiêu đề "Chuẩn bị" -->
        <TextView
            android:id="@+id/txtChuanBiFlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d58d57"
            android:padding="8dp"
            android:text="Chuẩn bị:"
            android:textSize="20sp" />

        <!-- Danh sách nguyên liệu -->
        <TextView
            android:id="@+id/txtDoKhoFlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6a481"
            android:padding="8dp"
            android:text="Độ khó: Dễ   Thời gian: 60p"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtTrungGaFlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Trứng gà 4 quả"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtSuaDacFlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Sữa đặc 1 hộp"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtSuaTuoiFlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Sữa tươi 250 ml"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtDuongFlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Đường trắng 100 gr"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtVanillaFlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Vani 1 muỗng cà phê"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtBuocFlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d58d57"
            android:padding="8dp"
            android:text="Bước làm: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtB1Flan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#914F3B"
            android:padding="8dp"
            android:text="Bước 1: Làm caramel"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB1Flan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6b7a1"
            android:padding="8dp"
            android:text="Nấu 100 gr đường với ít nước trên lửa nhỏ đến khi chuyển màu cánh gián, sau đó đổ vào khuôn bánh." />

        <TextView
            android:id="@+id/txtB2Flan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#914F3B"
            android:padding="8dp"
            android:text="Bước 2: Pha hỗn hợp flan"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB2Flan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6b7a1"
            android:padding="8dp"
            android:text="Đánh tan trứng gà, thêm sữa đặc, sữa tươi và vani. Lọc qua rây cho mịn rồi đổ vào khuôn caramel." />

        <TextView
            android:id="@+id/txtB3Flan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#914F3B"
            android:padding="8dp"
            android:text="Bước 3: Hấp bánh"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB3Flan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6b7a1"
            android:padding="8dp"
            android:text="Đậy kín khuôn bằng giấy bạc, hấp cách thủy 30 phút. Kiểm tra bằng tăm, nếu sạch là bánh đã chín." />

        <TextView
            android:id="@+id/txtB4Flan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#914F3B"
            android:padding="8dp"
            android:text="Bước 4: Thành phẩm"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB4Flan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6b7a1"
            android:padding="8dp"
            android:text="Bánh flan mềm mịn, thơm mùi trứng và sữa, kết hợp với lớp caramel ngọt thanh, ngon hơn khi dùng lạnh." />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#914F3B"
            android:text="Quay lại"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
