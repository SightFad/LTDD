<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f4e4d7"
        android:padding="16dp">

        <!-- Hình ảnh -->
        <ImageView
            android:id="@+id/imageViewBirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/birthdaycake" />

        <!-- Tiêu đề "Chuẩn bị" -->
        <TextView
            android:id="@+id/txtChuanBiBirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a66a44"
            android:padding="8dp"
            android:text="Chuẩn bị:"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <!-- Độ khó & thời gian -->
        <TextView
            android:id="@+id/txtDoKhoBirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c79a78"
            android:padding="8dp"
            android:text="Độ khó: Trung bình   Thời gian: 90p"
            android:textSize="20sp" />

        <!-- Danh sách nguyên liệu -->
        <TextView
            android:id="@+id/txtNguyenLieuBirthdayCake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Bột mì 250 gr\n2. Đường 200 gr\n3. Trứng gà 3 quả\n4. Sữa tươi 150 ml\n5. Bơ 120 gr\n6. Bột nở 1 muỗng cà phê\n7. Vani 1 muỗng cà phê\n8. Kem tươi và trái cây trang trí"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtBuocBirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a66a44"
            android:padding="8dp"
            android:text="Bước làm: "
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtB1BirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 1: Trộn bột"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB1BirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Đánh trứng với đường cho đến khi bông mịn, sau đó thêm bơ, sữa, bột mì, bột nở và vani, trộn đều." />

        <TextView
            android:id="@+id/txtB2BirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 2: Nướng bánh"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB2BirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Đổ hỗn hợp vào khuôn, nướng ở 180°C trong 50 phút. Kiểm tra bằng tăm, nếu rút ra sạch là bánh đã chín." />

        <TextView
            android:id="@+id/txtB3BirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 3: Trang trí"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB3BirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Phết kem tươi lên bánh, trang trí với trái cây và nến sinh nhật." />

        <Button
            android:id="@+id/btnSaveBirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a66a44"
            android:text="Lưu"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnBackBirthdayCake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:text="Quay lại"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</ScrollView>
