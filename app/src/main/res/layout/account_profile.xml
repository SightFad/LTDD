<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên người dùng"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Tiêu đề liên kết tài khoản -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liên kết tài khoản thanh toán"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Button Liên kết tài khoản -->
        <Button
            android:id="@+id/btnLinkAccounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liên kết tài khoản"
            android:backgroundTint="#D58D57"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

        <!-- Nút Lưu thông tin (có thể giữ hoặc xóa tùy nhu cầu) -->
        <Button
            android:id="@+id/btnSavePayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu thông tin"
            android:backgroundTint="#914F3B"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <!-- Nút Logout và Back -->
        <Button
            android:id="@+id/btnSignout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="18sp"
            android:padding="8dp"
            android:backgroundTint="#D58D57"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18sp"
            android:padding="8dp"
            android:backgroundTint="#914F3B"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>