<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f4e4d7"
        android:padding="16dp">

        <!-- Hình ảnh -->
        <ImageView
            android:id="@+id/imageViewDonut"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/donut" />

        <!-- Tiêu đề "Chuẩn bị" -->
        <TextView
            android:id="@+id/txtChuanBiDonut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a66a44"
            android:padding="8dp"
            android:text="Chuẩn bị:"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <!-- Độ khó & thời gian -->
        <TextView
            android:id="@+id/txtDoKhoDonut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c79a78"
            android:padding="8dp"
            android:text="Độ khó: Trung bình   Thời gian: 2h"
            android:textSize="20sp" />

        <!-- Danh sách nguyên liệu -->
        <TextView
            android:id="@+id/txtNguyenLieuDonut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Bột mì 300 gr\n2. Đường 50 gr\n3. Men nở 5 gr\n4. Sữa tươi 150 ml\n5. Bơ 50 gr\n6. Trứng gà 1 quả\n7. Muối 3 gr\n8. Dầu ăn để chiên\n9. Socola hoặc đường bột để phủ"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtBuocDonut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a66a44"
            android:padding="8dp"
            android:text="Bước làm: "
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtB1Donut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 1: Nhào bột và ủ"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB1Donut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Trộn bột mì, đường, men nở và muối. Thêm sữa, bơ và trứng, nhào bột trong 10 phút. Ủ bột trong 1 tiếng đến khi nở gấp đôi." />

        <TextView
            android:id="@+id/txtB2Donut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 2: Cắt bột và tạo hình"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB2Donut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Cán bột dày khoảng 1 cm, dùng khuôn cắt thành hình donut. Ủ thêm 30 phút." />

        <TextView
            android:id="@+id/txtB3Donut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 3: Chiên bánh"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB3Donut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Chiên bánh trong dầu nóng (170°C) đến khi vàng đều, vớt ra để ráo dầu." />

        <TextView
            android:id="@+id/txtB4Donut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:padding="8dp"
            android:text="Bước 4: Trang trí"
            android:textSize="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtNDB4Donut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d9b9a3"
            android:padding="8dp"
            android:text="Phủ socola đun chảy hoặc rắc đường bột lên mặt bánh để hoàn tất." />

        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D58D57"
            android:text="Donate"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#804c29"
            android:text="Quay lại"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</ScrollView>
